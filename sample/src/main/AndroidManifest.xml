<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tohamy.materialhijricalendarview.sample">

    <application
        android:supportsRtl="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tohamy.materialhijricalendarview.sample.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

      <activity
          android:name="com.tohamy.materialhijricalendarview.sample.OldCalendarViewActivity"
          android:label="@string/title_activity_old_calendar"
          android:parentActivityName="com.tohamy.materialhijricalendarview.sample.MainActivity">

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.tohamy.materialhijricalendarview.sample.MainActivity"/>

      </activity>

      <activity
          android:name="com.tohamy.materialhijricalendarview.sample.BasicActivity"
          android:label="@string/title_activity_basic"
          android:parentActivityName="com.tohamy.materialhijricalendarview.sample.MainActivity">

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.tohamy.materialhijricalendarview.sample.MainActivity"/>

      </activity>

        <activity
            android:name="com.tohamy.materialhijricalendarview.sample.BasicActivityDecorated"
            android:label="@string/title_activity_decorators"
            android:parentActivityName="com.tohamy.materialhijricalendarview.sample.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tohamy.materialhijricalendarview.sample.MainActivity"/>

        </activity>

        <activity
            android:name=".DisableDaysActivity"
            android:label="@string/title_activity_disable"
            android:parentActivityName="com.tohamy.materialhijricalendarview.sample.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tohamy.materialhijricalendarview.sample.MainActivity"/>

        </activity>

        <activity
            android:name="com.tohamy.materialhijricalendarview.sample.CustomizeXmlActivity"
            android:label="@string/title_activity_customize_xml"
            android:parentActivityName="com.tohamy.materialhijricalendarview.sample.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tohamy.materialhijricalendarview.sample.MainActivity"/>

        </activity>

        <activity
            android:name="com.tohamy.materialhijricalendarview.sample.CustomizeCodeActivity"
            android:label="@string/title_activity_customize_code"
            android:parentActivityName="com.tohamy.materialhijricalendarview.sample.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tohamy.materialhijricalendarview.sample.MainActivity"/>

        </activity>

        <activity
            android:name="com.tohamy.materialhijricalendarview.sample.DynamicSettersActivity"
            android:label="@string/title_activity_dynamic_setters"
            android:parentActivityName="com.tohamy.materialhijricalendarview.sample.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tohamy.materialhijricalendarview.sample.MainActivity"/>

        </activity>

        <activity
            android:name=".DialogsActivity"
            android:label="@string/title_activity_dialogs"
            android:parentActivityName="com.tohamy.materialhijricalendarview.sample.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tohamy.materialhijricalendarview.sample.MainActivity"/>

        </activity>

    </application>

</manifest>
